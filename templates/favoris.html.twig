{% extends 'base.html.twig' %}

{% block title %}
  I Can Relate - Choices
{% endblock %}

{% block body %}
  <main class="container">
    <div class="mainTitle">
      <h1>Favoris</h1>
      <hr>
        {% for post in posts %}
          {% if app.user and post.isLikedByUser(app.user) %}
            <div class="lyrics">
              {{post.introduction|raw}}
            </div>

            <div class="title">
              <p>
                {{post.title}}
              </p>
            </div>

            <div class="player">
              <iframe src="https://open.spotify.com/embed/track/{{post.content}}" width="100%" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
            </div>

            <div class="button-box">
              <a class="js-likes" href="{{path('like',{'id':post.id})}}">
                <button class="button--green--validate js-like" id="btn">
                  I don't relate anymore
                </button>
              </a>
            </div>
            <hr>
          {% endif %}
        {% endfor %}
      </main>
    {% endblock %}
